<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#FFFFFF"
    tools:context=".personalChatActivity">


    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:src="@drawable/homeindicator"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header -->

    <!-- Header -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleX="-1"
        android:src="@drawable/next"
        android:tint="#8B5A5A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/circle_mask"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sam"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton" />

    <TextView
        android:id="@+id/usernameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Samee"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage"
        app:layout_constraintEnd_toStartOf="@id/videoCallButton" />

    <ImageView
        android:id="@+id/videoCallButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/video"
        android:tint="#000000"
        app:layout_constraintEnd_toStartOf="@id/infoButton"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage" />

    <ImageView
        android:id="@+id/infoButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/info"
        android:tint="#8B5A5A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintBottom_toBottomOf="@id/profileImage" />


    <!-- New Chat Content -->

    <!-- Time text -->

    <!-- Chat bubble -->
    <!-- Time text -->
    <TextView
        android:id="@+id/chatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:text="4:49 PM"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage" />

    <!-- Your first message -->
    <TextView
        android:id="@+id/chatBubble1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Hello"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/chat_bubble_bg"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/chatTime"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- His reply -->
    <TextView
        android:id="@+id/chatBubble2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Han bhai"
        android:textSize="14sp"
        android:textColor="#000000"
        android:background="@drawable/chat_bubble_received_bg"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/chatBubble1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Your next message -->
    <TextView
        android:id="@+id/chatBubble3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Mei gate pr hun uni ke "
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/chat_bubble_bg"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/chatBubble2"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- His last message -->
    <TextView
        android:id="@+id/chatBubble4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="mei cafe betha hun faculty ke saath"
        android:textSize="14sp"
        android:textColor="#000000"
        android:background="@drawable/chat_bubble_received_bg"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/chatBubble3"
        app:layout_constraintStart_toStartOf="parent" />



    <!-- Bottom message input bar -->
    <LinearLayout
        android:id="@+id/messageBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/message_bar_bg"
        android:paddingHorizontal="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/camera"
            android:tint="#8B5A5A"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Message..."
            android:background="@android:color/transparent"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/micIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/microphone"
            android:tint="#000000"
            android:layout_marginHorizontal="4dp"/>

        <ImageView
            android:id="@+id/galleryIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/gallery"
            android:tint="#000000"
            android:layout_marginHorizontal="4dp"/>

        <ImageView
            android:id="@+id/stickerIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/stickers"
            android:tint="#000000"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
