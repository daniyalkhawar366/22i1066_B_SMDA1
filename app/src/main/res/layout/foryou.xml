<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FYPActivity">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/addstory"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_camera"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textSize="22sp"
            android:textColor="#8B5A5A"
            android:gravity="center"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/tv"
            android:tint="#8B5A5A"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/chats"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/send"
            android:tint="#8B5A5A"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>
    <!-- Stories Row -->
    <LinearLayout
        android:id="@+id/storiesRow"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/topHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Repeat for each story -->
        <!-- STORY ITEM START -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <!-- Gradient ring background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ring_gradient"
                    android:layout_gravity="center" />

                <!-- Circular image with white border -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_pic"
                    android:background="@drawable/circle_white_bg"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Story"
                android:textSize="11sp"
                android:textColor="#262626"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <!-- STORY ITEM END -->

        <!-- Copy the above block and replace the image + text for each story -->
        <!-- Story 2 -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ring_gradient"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/amman"
                    android:background="@drawable/circle_white_bg"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amman"
                android:textSize="11sp"
                android:textColor="#262626"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Story 3 -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ring_gradient"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bilal"
                    android:background="@drawable/circle_white_bg"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bilal120"
                android:textSize="11sp"
                android:textColor="#262626"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Story 4 -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ring_gradient"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rfy"
                    android:background="@drawable/circle_white_bg"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rfy"
                android:textSize="11sp"
                android:textColor="#262626"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Story 5 -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ring_gradient"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ibbi"
                    android:background="@drawable/circle_white_bg"
                    android:clipToOutline="true"
                    android:outlineProvider="background" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ibbi"
                android:textSize="11sp"
                android:textColor="#262626"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>


    <!-- Post Header -->
    <LinearLayout
        android:id="@+id/postHeader"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/storiesRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ibbi"
            android:background="@drawable/circle_mask"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ibbi"
                    android:textSize="14sp"
                    android:textColor="#262626"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/verified"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokyo, Japan"
                android:textSize="12sp"
                android:textColor="#8E8E8E"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="22sp"
            android:textColor="#8B5A5A"/>
    </LinearLayout>

    <!-- Post Image -->
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/tokyo"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/postHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/postActions"/>

    <!-- Image Counter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/3"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/counter_background"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/postHeader"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Post Actions -->
    <LinearLayout
        android:id="@+id/postActions"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/likesSection">

        <!-- Like icon -->
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/like"
            android:tint="#262626" />

        <!-- Chat icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chat"
            android:tint="#262626"
            android:layout_marginStart="16dp" />

        <!-- Send icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/send"
            android:tint="#262626"
            android:layout_marginStart="16dp" />

        <!-- Spacer to push dots to center -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Centered dots -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="#8B5A5A"
            android:textSize="24sp" />

        <!-- Spacer to push bookmark to right end -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bookmark icon aligned to right -->
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ribbon"
            android:tint="#262626" />
    </LinearLayout>


    <!-- Likes Section -->
    <LinearLayout
        android:id="@+id/likesSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/captionSection">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked by "
            android:textSize="14sp"
            android:textColor="#262626"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="amman"
            android:textSize="14sp"
            android:textColor="#262626"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and others"
            android:textSize="14sp"
            android:textColor="#262626"/>

    </LinearLayout>

    <!-- Caption Section -->
    <LinearLayout
        android:id="@+id/captionSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ibbi"
            android:textSize="14sp"
            android:textColor="#262626"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Amazing view of Shibuya building! The energy here is incredible ðŸ™ï¸ #Tokyo #Japan #Travel"
            android:textSize="14sp"
            android:textColor="#262626"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home2"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/explorepg"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/shape"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/post"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/plusbox"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/notificationsfollowing"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/like"
            android:tint="#8B5A5A"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile_pic"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/circle_mask"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>