<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#FFFFFF"
    tools:context=".ChatActivity">


    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next"
            android:scaleX="-1"
            android:tint="#8B5A5A"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="_dnyl."
            android:textSize="18sp"
            android:textColor="#8B5A5A"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus"
            android:tint="#8B5A5A" />
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/search_bar_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Search"
            android:textColor="#999999"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Chat List -->
    <LinearLayout
        android:id="@+id/chatList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/indicator">

        <!-- Chat Item -->
        <LinearLayout
            android:id="@+id/samchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/sam"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true" />

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samee"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mei cafe betha hun faculty ke saath"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· now"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <!-- Camera Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera"
                android:tint="#8B5A5A" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ammanchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/amman"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true" />

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amman"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dani bhai aapko referral dedun Systems mei?"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 5m"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <!-- Camera Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera"
                android:tint="#8B5A5A" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ibbichat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/ibbi"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true" />

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ibrahim"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekend pr kuch plan krna hai?"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 20m"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <!-- Camera Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera"
                android:tint="#8B5A5A" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/jdchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/jd"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true" />

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JD"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="oye proxy laga di thi PPIT mei?"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 35m"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <!-- Camera Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera"
                android:tint="#8B5A5A" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rafaychat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/rfy"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true" />

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rafay"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tou yes krwao boss phir :)"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 35m"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <!-- Camera Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera"
                android:tint="#8B5A5A" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bilalchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/bilal"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true" />

            <!-- Texts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bilal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allah ka karam"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="· 40m"
                android:textColor="#777777"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <!-- Camera Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera"
                android:tint="#8B5A5A" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/cameraRow"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/camera2"
            android:tint="#8B5A5A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:text=" Camera"
            android:textColor="#777777"
            android:textSize="12sp" />
    </LinearLayout>
    <!-- Bottom Indicator -->
    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:src="@drawable/homeindicator"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
