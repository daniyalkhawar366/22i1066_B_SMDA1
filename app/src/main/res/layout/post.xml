<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MakePostActivity">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="#8B5A5A"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recents"
                android:textSize="16sp"
                android:textColor="#8B5A5A"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/down"
                android:tint="#8B5A5A"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="16sp"
            android:textColor="#8B5A5A"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- Main Selected Photo -->

    <!-- Photo Selection Controls -->
    <!-- Main Selected Photo -->

    <!-- Photo Selection Controls (overlay on bottom-right of photo) -->
    <ImageView
        android:id="@+id/mainSelectedPhoto"
        android:layout_width="415dp"
        android:layout_height="338dp"
        android:scaleType="centerCrop"
        android:src="@drawable/me2"
        app:layout_constraintBottom_toTopOf="@id/photoGrid"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topHeader"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/photoControls"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/mainSelectedPhoto"
        app:layout_constraintEnd_toEndOf="@id/mainSelectedPhoto"
        android:layout_margin="12dp">

        <!-- Loop/Infinity Icon -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/loop"
            android:tint="#FFFFFF"
            android:padding="4dp"
            android:layout_marginEnd="8dp"/>

        <!-- Grid View Icon -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/gridlike"
            android:tint="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- Single Select Icon -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/copy"
            android:tint="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT MULTIPLE"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>



    <!-- Photo Grid -->
    <LinearLayout
        android:id="@+id/photoGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/mainSelectedPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/me1"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/profile_pic"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/mansion"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/landscape"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flowers"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/cars"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/camping"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/uni"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/weddings"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bar"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bird"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/wedding3"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>