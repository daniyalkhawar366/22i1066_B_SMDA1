<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".UploadStory">

    <!-- Main Story Image Background -->
    <ImageView
        android:id="@+id/storyImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/jonsnow"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Dark Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#20000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Top Control Icons -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Close X -->
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/Cross"
            android:padding="8dp"
            android:layout_marginEnd="16dp"/>

        <!-- Spacer pushes icons to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Remaining icons... -->
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/Partnership"
            android:padding="8dp"
            android:backgroundTint="#8B5A5A"
            android:layout_marginEnd="-12dp"/>

        <!-- Text Aa Icon -->
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/Text"
            android:padding="8dp"
            android:backgroundTint="#8B5A5A"
            android:layout_marginEnd="-12dp"/>

        <!-- Sticker Icon -->
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/Stickers2"
            android:padding="8dp"
            android:backgroundTint="#8B5A5A"
            android:layout_marginEnd="-12dp"/>

        <!-- Music Note Icon -->
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/Music"
            android:padding="8dp"
            android:backgroundTint="#8B5A5A"
            android:layout_marginEnd="-12dp"/>

        <!-- Effects/Sparkle Icon -->
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/Filters"
            android:padding="8dp"
            android:backgroundTint="#8B5A5A"
            android:layout_marginEnd="-12dp"/>

        <!-- More Options (3 dots) -->
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/Options"
            android:padding="8dp"
            android:backgroundTint="#8B5A5A"/>

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Your Stories Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/story_button_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_pic"
                android:background="@drawable/circle_mask"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your stories"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <!-- Close Friends Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/story_button_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/star"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close Friends"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- Send Arrow Button -->
        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/sendbutton"
            android:padding="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>